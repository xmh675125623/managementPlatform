<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jiuzhou.plat.mapper.FirewallLogMapper">


	<insert id="insertBatch">
		INSERT INTO ${table_name} (
			`source_ip`,
			`target_ip`,
			`add_time`,
			`event_type`,
			`level`,
			`module`,
			`context`) 
		VALUES 
		<foreach collection="list" item="bean" index= "index" separator =",">
			(
			#{bean.source_ip},
			#{bean.target_ip},
			#{bean.add_time},
			#{bean.event_type},
			#{bean.level},
			#{bean.module},
			#{bean.context}
			)
		</foreach>
	</insert>
	
	<insert id="insertBatchBySql">
		INSERT INTO ${table_name} (`add_time`, `event_type`, `level`, `module`, `context`, `source_ip`, `target_ip`) VALUES ${sql}
	</insert>
	
	
	<insert id="insertBatchBySqls">
		INSERT INTO ${table_name} (`add_time`, `facility`, `level`, `module`, `origin`, `source_ip`, `target_ip`, `message`) VALUES 
		<foreach collection="sql" separator="," item="item">${item}</foreach>
	</insert>
	
	
	<select id="search" resultType="com.jiuzhou.plat.bean.FirewallLog">
		SELECT * FROM ${table_name} WHERE
		<choose>
			<when test="sort_field != null and sort_field != '' and sort_order != null and sort_order != '' and sort_order == ' DESC '">
				${sort_field} &lt;=
			</when>
			<otherwise>
				`id` &gt;=
			</otherwise>
		</choose>
			( 
				SELECT id FROM ${table_name} 
				WHERE 1=1 
				<if test="condition != null and condition != ''">
					${condition}
				</if> 
				<choose>
					<when test="sort_field != null and sort_field != '' and sort_order != null and sort_order != ''">
						ORDER BY ${sort_field} ${sort_order}
					</when>
					<otherwise>
						ORDER BY `id` ASC
					</otherwise>
				</choose>
				LIMIT #{start},1
			)
			AND 1=1
		<if test="condition != null and condition != ''">
			${condition}
		</if>
		<choose>
			<when test="sort_field != null and sort_field != '' and sort_order != null and sort_order != ''">
				ORDER BY ${sort_field} ${sort_order}
			</when>
			<otherwise>
				ORDER BY `id` ASC
			</otherwise>
		</choose>
		LIMIT #{page_size}
	</select>	
	
	
	<select id="searchCount" resultType="int">
		SELECT 
			COUNT(*) 
		FROM 
			${table_name}
		WHERE
			1=1
		<choose>
			<when test="condition != null and condition != ''">
				${condition}
			</when>
			<otherwise>
				AND `id` &gt; 0
			</otherwise>
		</choose>
		
		
	</select>
	
	
	<select id="getReportByLevel" resultType="com.jiuzhou.plat.bean.AuditReportItem">
		SELECT 
			`level` AS `title`, 
			COUNT(*) AS `VALUE` 
		FROM 
			${table_name}
		GROUP BY 
			`level`
		ORDER BY 
			`level` ASC
	</select>
	
	
	<select id="getReportByModule" resultType="com.jiuzhou.plat.bean.AuditReportItem">
		SELECT 
			`module` AS `title`, 
			COUNT(*) AS `VALUE` 
		FROM 
			${table_name}
		WHERE
			(source_ip=#{ip} OR target_ip=#{ip} ) AND module IN (${modules}) AND `level` IN (${levels})
		GROUP BY 
			`module`
		ORDER BY 
			`module` ASC
	</select>
	

</mapper>